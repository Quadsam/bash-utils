# Maintainer:  Quadsam <sam@quadsam.com>
# Contributor: Quadsam <sam@quadsam.com>

pkgname='dwmrun'
pkgver=0.0.1
pkgrel=1
pkgdesc="A startx wrapper for dwm"
arch=('any')
url=""
license=('GPL')
depends=('bash' 'xorg-xinit')
source=("$pkgname-$pkgver.tar.gz")
sha256sums=('0266fcc78730f5a8fa1adc9efe13cb7270fd726ece36fcca4c2ce6453e55bf02')

package()
{
	cd "$pkgname-$pkgver"

	install -vDm0755 'dwmrun.sh' "$pkgdir/usr/bin/dwmrun"
	install -vDm0644 -t "$pkgdir/etc" 'dwmrun.conf'
	install -vDm0644 -t "$pkgdir/usr/share/xsessions" 'dwmrun.desktop'
}
